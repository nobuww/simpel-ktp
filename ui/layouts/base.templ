package layouts

// scripts is an explicit parameter.
// The main content is implicit via { children... }
templ Base(title string, scripts templ.Component) {
	<!DOCTYPE html>
	<html lang="id" class="scroll-smooth">
		@Head(title)
		<body class="bg-background font-sans text-foreground antialiased">
			<main class="w-full">
				{ children... }
			</main>
			@Footer()
			if scripts != nil {
				@scripts
			}
		</body>
	</html>
}
